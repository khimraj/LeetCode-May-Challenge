// The API isBadVersion is defined for you.
// bool isBadVersion(int version);

// approach is to use binary search

class Solution {
public:
    int firstBadVersion(int n) {
        int left = 1, right = n, mid, first_bad;
        while (left <= right) {
            mid = left + (right - left) / 2;
            if (isBadVersion(mid)) {
                first_bad = mid;
                right = mid - 1;
            }
            else{
                left = mid + 1;
            }
        }
        return first_bad;
    }
};